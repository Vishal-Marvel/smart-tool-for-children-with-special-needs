// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum MemberRole {
  ADMIN
  USER
}

model Users {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  age             String
  gender          String
  weight          String
  height          String
  email           String     @unique
  phone_no        String
  medical_history String
  role            MemberRole @default(USER)
}

model Game {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  name           String @unique
  description    String
  graphStatement String
}

model User_Game {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  gameId    String
  userId    String
  date      DateTime @default(now())
  maximum   Int?
  timeTaken Int
  level     Int
  accuracy  Int
}
